<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pvt"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.pvt.PVTQuery"
            android:label="@string/app_name" >
            <intent-filter>
                
				<action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pvt.Tracking"
            android:label="@string/title_activity_tracking" >
        </activity>
        <activity
            android:name="com.pvt.Track"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_track"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.pvt.BusDetails"
            android:label="@string/title_activity_bus_details" >
        </activity>
        <activity
            android:name="com.pvt.ContactEnquiry"
            android:label="@string/title_activity_contact_enquiry" >
        </activity>
        <activity
            android:name="com.pvt.BusList"
            android:label="@string/title_activity_bus_list" >
        </activity>
        <activity
            android:name="com.pvt.LaunchActivity"
            android:label="@string/title_activity_launch" >
        </activity>
        <activity
            android:name="com.pvt.PVTLaunchActivity"
            android:label="@string/title_activity_pvtlaunch" >
        </activity>
    </application>

</manifest>